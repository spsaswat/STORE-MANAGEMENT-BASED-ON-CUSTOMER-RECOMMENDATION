<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".updateuser">
    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="FIRST NAME"
        android:inputType="textPersonName"
        android:shadowColor="@color/FireBrick" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="109dp"
        android:ems="10"
        android:hint="middlename(optional)"
        android:inputType="textPersonName"
        android:shadowColor="@color/FireBrick" />

    <EditText
        android:id="@+id/editText8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="175dp"
        android:ems="10"
        android:hint="LAST NAME"
        android:inputType="textPersonName"
        android:shadowColor="@color/FireBrick"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="239dp"
        android:ems="10"
        android:hint="age(5-100)"
        android:inputType="number"
        android:shadowColor="@color/FireBrick" />

    <EditText
        android:id="@+id/editText10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="303dp"
        android:ems="10"
        android:hint="EMAIL"
        android:inputType="textWebEmailAddress"
        android:shadowColor="@color/FireBrick" />

    <EditText
        android:id="@+id/editText11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="380dp"
        android:ems="10"
        android:hint="phone number(10 digit)"
        android:inputType="number"
        android:shadowColor="@color/FireBrick" />

    <EditText
        android:id="@+id/editText17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="443dp"
        android:ems="10"
        android:hint="PASSWORD(Min length 5)"
        android:inputType="textPersonName"
        android:shadowColor="@color/FireBrick" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="136dp"
        android:layout_marginBottom="25dp"
        android:background="@android:color/holo_orange_light"
        android:onClick="update1"
        android:shadowColor="@color/FireBrick"
        android:text="UPDATE" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="40dp"
        android:onClick="back1"
        android:text="EXIT UPDATE MODE"
        android:textColor="@color/BlueRoyale" />

    <Button
        android:id="@+id/button31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="242dp"
        android:layout_marginBottom="25dp"
        android:background="@color/GreenSuperLight"
        android:onClick="myInformation"
        android:text="MY INFORMATION" />
</RelativeLayout>